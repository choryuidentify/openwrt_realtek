/dts-v1/;

#include "RTL819X.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "totolink,a3002ru", "realtek,rtl819x-soc";
	model = "TOTOLINK A3002RU v1";

	cpus {
		cpu@0 {
			compatible = "realtek,rx5281";
		};
	};

	memory {
		device_type = "memory";
		reg = <0x0 0x4000000>;
	};

	chosen {
		bootargs = "console=ttyS0,38400";
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio0 5 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};

		wps {
			label = "wps";
			gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		cpu {
			label = "a3002ru:orange:cpu";
			gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
		};

		usb {
			label = "a3002ru:orange:usb";
			gpios = <&gpio0 4 GPIO_ACTIVE_LOW>;
		};
	};

	rtl8367rb {
		compatible = "realtek,rtl8367b";
		cpu_port = <6>;
		gpio-sda = <&gpio1 14 GPIO_ACTIVE_LOW>;
		gpio-sck = <&gpio1 13 GPIO_ACTIVE_LOW>;
		gpio-reset = <&gpio0 1 GPIO_ACTIVE_LOW>;
		realtek,extif1 = <1 0 1 1 1 1 1 1 2>;
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&spi0 {
	status = "okay";

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <12000000>;

		partition@0 {
			label = "bootloader";
			reg = <0x0 0x6000>;
			read-only;
		};
		hw: partition@6000 {
			label = "hw";
			reg = <0x6000 0x2000>;
			read-only;
		};
		partition@8000 {
			label = "compds";
			reg = <0x8000 0x8000>;
			read-only;
		};
		partition@10000 {
			label = "compcs";
			reg = <0x10000 0x10000>;
			read-only;
		};
		partition@20000 {
			label = "firmware";
			reg = <0x20000 0x7e0000>;
		};
	};
};

&eth0 {
	status = "okay";

	mtd-mac-address = <&hw 0x07>;
	port@0 {
		status = "okay";
		realtek,fixed-link = <1000 1 1 1>;
		phy-mode = "rgmii";
	};
};

&usbphy {
	realtek,oneportsel;
};

&ehci {
	status = "okay";
};

&ohci {
	status = "okay";
};

&pcie0 {
	status = "okay";
};

&pcie1 {
	status = "okay";
	reset-gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
};
