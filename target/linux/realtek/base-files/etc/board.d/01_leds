#!/bin/sh

. /lib/functions/uci-defaults.sh

board_config_update

board=$(board_name)

case $board in
  ip-com,w36ap)
    ucidef_set_led_default "sys" "sys" "green:sys" "1"
    ;;
  totolink,a3002ru)
    ucidef_set_led_default "sys" "sys" "orange:cpu" "1"
    ;;
  dlink,dir-815-d1)
    ucidef_set_led_switch "lan1" "lan1" "green:lan1" "switch0" "0x1"
    ucidef_set_led_switch "lan2" "lan2" "green:lan2" "switch0" "0x2"
    ucidef_set_led_switch "lan3" "lan3" "green:lan3" "switch0" "0x4"
    ucidef_set_led_switch "lan4" "lan4" "green:lan4" "switch0" "0x8"
    ucidef_set_led_switch "wan" "wan" "green:wan" "switch0" "0x10"
    ucidef_set_led_netdev "wifi_led_2g" "wifi_2g" "green:wifi2" "wlan0"
    ucidef_set_led_netdev "wifi_led_5g" "wifi_5g" "green:wifi5" "wlan1"
    ;;
  greatek,gwr-300n|\
  multilaser,re172)
    ucidef_set_led_switch "lan1" "lan1" "green:lan1" "switch0" "0x1"
    ucidef_set_led_switch "lan2" "lan2" "green:lan2" "switch0" "0x2"
    ucidef_set_led_switch "lan3" "lan3" "green:lan3" "switch0" "0x4"
    ucidef_set_led_switch "lan4" "lan4" "green:lan4" "switch0" "0x8"
    ucidef_set_led_switch "wan" "wan" "green:wan" "switch0" "0x10"
    ucidef_set_led_netdev "wifi_led_2g" "wifi_2g" "green:wifi2" "wlan0"
    ;;
  interbras,action-rg-1200)
    ucidef_set_led_netdev "lan" "lan" "blue:lan" "eth0" "tx rx"
    ucidef_set_led_netdev "wan" "wan" "blue:wan" "eth1" "tx rx"
    ucidef_set_led_netdev "wifi0" "wifi0" "blue:wifi0" "wlan0" "link tx rx"
    ucidef_set_led_default "sys" "sys" "blue:sys" "1"
    ;;
  interbras,action-rf-1200)
    ucidef_set_led_netdev "wifi0" "wifi0" "blue:wifi0" "wlan0" "link tx rx"
    ucidef_set_led_default "sys" "sys" "blue:sys" "1"
    ;;
  multilaser,re708)
    ucidef_set_led_switch "wan" "wan" "green:wan" "switch0" "0x10"
    ucidef_set_led_switch "lan1" "lan1" "green:lan1" "switch0" "0x1"
    ucidef_set_led_switch "lan2" "lan2" "green:lan2" "switch0" "0x2"
    ucidef_set_led_switch "lan3" "lan3" "green:lan3" "switch0" "0x4"
    ucidef_set_led_switch "lan4" "lan4" "green:lan4" "switch0" "0x8"
    ucidef_set_led_netdev "wifi0" "wifi0" "green:wifi0" "wlan0" "link tx rx"
    ucidef_set_led_netdev "wifi1" "wifi1" "green:wifi1" "wlan1" "link tx rx"
    # Breaks device switch. Still needs fix before using it
    # ucidef_set_led_default "wps" "wps" "green:wps" "0"
    ;;
  greatek,gwr1200ac-v1)
    ucidef_set_led_netdev "wifi0" "wifi0" "green:wifi0" "wlan0" "link tx rx"
    ucidef_set_led_netdev "wifi1" "wifi1" "green:wifi1" "wlan1" "link tx rx"
    # Breaks device switch. Still needs fix before using it
    # ucidef_set_led_default "wps" "wps" "green:wps" "0"
    ;;
  greatek,gwr1200ac-v2)
    ucidef_set_led_default "wifi0" "wifi0" "green:wifi0" "1"
    ucidef_set_led_default "wifi1" "wifi1" "green:wifi1" "1"
    # Breaks device switch. Still needs fix before using it
    # ucidef_set_led_default "wps" "wps" "green:wps" "0"
    ;;
esac

board_config_flush

exit 0
